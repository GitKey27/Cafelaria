<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="6dp"
    android:background="@color/surface"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <!-- Original price (grayed + strike-through) - hidden when no discount is active -->
    <TextView
        android:id="@+id/tvProductOriginalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â‚±0.00"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="4dp" />

    <!-- Stock is hidden for products that are prepared on demand (drinks). Keep the view in case inventory is needed later. -->
    <TextView
        android:id="@+id/tvProductStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_secondary"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="+"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/surface" />

</LinearLayout>
